# Configuración de Base de Datos
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME_GENERAL=bd_pda
DB_NAME_SEGURIDAD=bd_pda_seguridad

# Configuración de Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion
SMTP_SECURE=tls
FROM_EMAIL=tu-email@gmail.com
FROM_NAME=Sistema Recuperadora

# Configuración de Seguridad
JWT_SECRET=tu-clave-secreta-muy-larga-y-segura-aqui
SESSION_SECRET=otra-clave-secreta-para-sesiones
ENCRYPTION_KEY=clave-de-encriptacion-de-32-caracteres

# Google reCAPTCHA
RECAPTCHA_SITE_KEY=tu-clave-site-key-de-recaptcha
RECAPTCHA_SECRET_KEY=tu-clave-secret-key-de-recaptcha

# Configuración de la Aplicación
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/project
APP_NAME=Sistema Recuperadora

# Configuración de Archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# APIs Externas (si las usas)
BCV_API_URL=https://api.bcv.org.ve
